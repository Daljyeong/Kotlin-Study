<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_spend_list_imageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/item_spend_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="으아아아"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/item_spend_list_imageView"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_spend_list_content"/>

    <TextView
        android:id="@+id/item_spend_list_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내용입니다"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/item_spend_list_title"
        app:layout_constraintStart_toStartOf="@id/item_spend_list_title"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>