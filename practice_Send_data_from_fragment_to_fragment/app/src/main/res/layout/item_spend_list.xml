    <!--dialog '아이콘'에 입력된 부분 띄우기-->
    <ImageView
        android:id="@+id/img_spend_list_icn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/ic_halfselected_food"
        app:layout_constraintBottom_toTopOf="@+id/line_spend_list"
        app:layout_constraintEnd_toStartOf="@+id/tv_spend_list_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--dialog '내용'에 입력된 부분 띄우기-->
    <TextView
        android:id="@+id/tv_spend_list_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9.2dp"
        android:text="식비"
        android:textColor="#191919"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/tv_spend_list_memo"
        app:layout_constraintStart_toEndOf="@id/img_spend_list_icn"
        app:layout_constraintTop_toTopOf="parent" />

    <!--dialog '한 줄 메모'에 입력된 부분 띄우기-->
    <TextView
        android:id="@+id/tv_spend_list_memo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="점심에 쌀국수 먹음!"
        android:textColor="#353535"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@id/line_spend_list"
        app:layout_constraintStart_toStartOf="@id/tv_spend_list_content"
        app:layout_constraintTop_toBottomOf="@id/tv_spend_list_content" />

    <!--dialog '금액 입력'에 입력된 부분 띄우기-->
    <TextView
        android:id="@+id/tv_spend_list_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="10,000원"
        android:textColor="#db2f90"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_spend_list_memo"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/line_spend_list"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ededed"
        app:layout_constraintBottom_toBottomOf="parent" />


